{% extends 'base.html.twig' %}

{% block title %}Ajouter un service{% endblock %}

{% block body %}
<h1>➕ Ajouter un nouveau service</h1>

{{ form_start(form) }}
  <div style="max-width: 600px;">
    {{ form_row(form.name) }}
    {{ form_row(form.category) }}
    {{ form_row(form.description) }}
  </div>
  <button class="btn btn-success mt-3">💾 Enregistrer</button>
  <a href="{{ path('app_services') }}" class="btn btn-secondary mt-3">↩️ Retour</a>
{{ form_end(form) }}
{% endblock %}
