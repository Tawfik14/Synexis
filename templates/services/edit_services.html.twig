{% extends 'base.html.twig' %}

{% block title %}Modifier le service {{ service.name }}{% endblock %}

{% block body %}
<h1>✏️ Modifier {{ service.name }}</h1>

{{ form_start(form) }}
  <div style="max-width: 600px;">
    {{ form_row(form.name) }}
    {{ form_row(form.category) }}
    {{ form_row(form.description) }}
  </div>

  <button type="submit" class="btn btn-success mt-3">💾 Sauvegarder</button>
  <a href="{{ path('app_services') }}" class="btn btn-secondary mt-3">↩️ Retour</a>
{{ form_end(form) }}
{% endblock %}
