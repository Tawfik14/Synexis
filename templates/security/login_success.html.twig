
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Synexis{% endblock %}

{% block body %}
<div class="dashboard-container">
  <aside class="sidebar">
    <div class="logo-section">
      <img src="{{ asset('img/logovert.png') }}" alt="Synexis" class="logo" loading="lazy">
      <h2>Synexis</h2>
    </div>
    <nav class="nav-links">
      <a href="#">Dashboard</a>
      <a href="#">Objets connectés</a>
      <a href="#">Statistiques</a>
      <a href="#">Profil</a>
      <a href="#">Déconnexion</a>
    </nav>
  </aside>

  <main class="main-panel">
    {% if app.user %}
      <h1>Bienvenue {{ app.user.username }}</h1>
    {% else %}
      <h1>Bienvenue sur votre tableau de bord</h1>
    {% endif %}
    <p>Voici un aperçu de vos services connectés :</p>

    <div class="card-grid">
      <div class="card">
        <h3>Caméras</h3>
        <p>2 actives / 5</p>
      </div>
      <div class="card">
        <h3>Capteurs Température</h3>
        <p>22.3°C moyenne</p>
      </div>
      <div class="card">
        <h3>Consommation</h3>
        <p>415 kWh/mois</p>
      </div>
      <div class="card">
        <h3>Alertes</h3>
        <p>0 critique / 3 normales</p>
      </div>
    </div>
  </main>
</div>
{% endblock %}
