{% extends 'base.html.twig' %}

{% block title %}Historique - {{ objet.name }}{% endblock %}

{% block body %}
<section style="max-width: 800px; margin: auto; padding: 2rem;">
  <h1>ðŸ“Š Historique de l'objet : {{ objet.name }}</h1>
  <p><strong>Type :</strong> {{ objet.type }}</p>
  <p><strong>Emplacement :</strong> {{ objet.location }}</p>
  <hr>

  {% if logs is empty %}
    <p>Aucune donnÃ©e historique disponible pour cet objet.</p>
  {% else %}
    <table style="width: 100%; border-collapse: collapse; margin-top: 1rem;">
      <thead>
        <tr style="background-color: #f0f0f0;">
          <th style="padding: 8px;">Date</th>
          <th style="padding: 8px;">Type</th>
          <th style="padding: 8px;">Valeur</th>
        </tr>
      </thead>
      <tbody>
        {% for log in logs %}
        <tr style="border-bottom: 1px solid #ccc;">
          <td style="padding: 8px;">{{ log.date|date('d/m/Y H:i') }}</td>
          <td style="padding: 8px;">{{ log.type }}</td>
          <td style="padding: 8px;">{{ log.valeur }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  {% endif %}
</section>
{% endblock %}
