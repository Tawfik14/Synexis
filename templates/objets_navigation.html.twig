{% extends 'base.html.twig' %}

{% block title %}Objets connectés{% endblock %}

{% block body %}
<h1>🧭 Navigation objets connectés & services</h1>

<div style="display: flex; gap: 2rem; margin-top: 2rem; flex-wrap: wrap;">
  <a href="{{ path('app_connected_objects') }}" class="btn btn-primary" style="padding: 1rem 2rem; font-size: 1.2rem;">📦 Mes objets</a>
  <a href="{{ path('app_all_objects') }}" class="btn btn-outline-primary" style="padding: 1rem 2rem; font-size: 1.2rem;">🌐 Tous les objets</a>
  <a href="{{ path('app_my_services') }}" class="btn btn-warning" style="padding: 1rem 2rem; font-size: 1.2rem;">🔧 Mes services</a>
  <a href="{{ path('app_all_services') }}" class="btn btn-outline-warning" style="padding: 1rem 2rem; font-size: 1.2rem;">🌐 Tous les services</a>
</div>

{% if 'ROLE_ADMIN' in app.user.roles %}
  <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary mt-4">🏠 Retour au tableau de bord</a>
{% elseif 'ROLE_ADVANCED' in app.user.roles %}
  <a href="{{ path('app_advanced_dashboard') }}" class="btn btn-secondary mt-4">🏠 Retour au tableau de bord</a>
{% else %}
  <a href="{{ path('app_user_dashboard') }}" class="btn btn-secondary mt-4">🏠 Retour au tableau de bord</a>
{% endif %}
{% endblock %}
