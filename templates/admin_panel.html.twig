{% extends 'base.html.twig' %}
{% block title %}Panneau Admin{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/features_dashboard.css') }}">
{% endblock %}

{% block body %}
<section class="dashboard-section">
    <h1>Administration Générale</h1>
    <p>Contrôlez l’ensemble de la plateforme : utilisateurs, sécurité, objets.</p>

    <div class="admin-cards">
        <div class="dashboard-card">
            <h3>Utilisateurs</h3>
            <p>25 utilisateurs actifs</p>
            <button>Gérer</button>
        </div>
        <div class="dashboard-card">
            <h3>Objets</h3>
            <p>13 objets connectés enregistrés</p>
            <button>Voir</button>
        </div>
        <div class="dashboard-card">
            <h3>Logs / Rapports</h3>
            <p>Dernier rapport : Aujourd’hui à 09h12</p>
            <button>Consulter</button>
        </div>
    </div>
</section>
{% endblock %}

