{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block body %}
<div class="container" style="padding: 2rem; max-width: 600px; margin: auto; text-align: center;">
  <h1>Profil de {{ user.pseudo }}</h1>

  <img src="{{ user.profilePicture ? asset('uploads/profiles/' ~ user.profilePicture) : asset('img/user-icon.png') }}"
       alt="Photo de {{ user.pseudo }}" style="width: 100px; height: 100px; border-radius: 50%; margin: 1rem auto;">

  <h2>{{ user.firstname }} {{ user.lastname }}</h2>

  <div style="margin: 1rem 0;">
    <strong>Niveau :</strong> {{ user.level }}<br>
    <strong>Points :</strong> {{ user.points }}
  </div>

  <p style="color: #777;">Pseudo : {{ user.pseudo }}</p>

  <a href="{{ path('app_user_directory') }}">&larr; Retour Ã  l'annuaire</a>
</div>
{% endblock %}
