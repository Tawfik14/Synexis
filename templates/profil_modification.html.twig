{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/profil_modification.css') }}">
{% endblock %}

{% block body %}
<!-- LOGO -->
<div class="logo-container">
  <img src="{{ asset('img/logovertsansfond.png') }}" alt="Synexis Logo">
</div>

<div class="edit-profile-form">
  <h1>Modifier mon profil</h1>

  {% if profilModifie %}
    <div class="alert-success">
       Profil mis à jour avec succès.
    </div>

    <div style="text-align: center; margin-top: 2rem;">
      <a href="{{ path('app_profil') }}">
        <button class="submit-btn"> Voir mon profil</button>
      </a>
    </div>

  {% else %}
    {{ form_start(form) }}
      <div class="form-group">
        {{ form_label(form.firstname) }}
        {{ form_widget(form.firstname) }}
      </div>
      <div class="form-group">
        {{ form_label(form.lastname) }}
        {{ form_widget(form.lastname) }}
      </div>
      <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
      </div>
      <div class="form-group">
        {{ form_label(form.pseudo) }}
        {{ form_widget(form.pseudo) }}
      </div>
      <div class="form-group">
        {{ form_label(form.gender) }}
        {{ form_widget(form.gender) }}
      </div>
      <div class="form-group">
        {{ form_label(form.dob) }}
        {{ form_widget(form.dob) }}
      </div>
      <div class="form-group">
        {{ form_label(form.level) }}
        {{ form_widget(form.level) }}
      </div>
      <div class="form-group">
        {{ form_label(form.points) }}
        {{ form_widget(form.points) }}
      </div>
      <div class="form-group">
        {{ form_label(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first) }}
      </div>
      <div class="form-group">
        {{ form_label(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second) }}
      </div>
      <div class="form-group">
        <button type="submit" class="submit-btn"> Mettre à jour</button>
      </div>
    {{ form_end(form) }}
  {% endif %}
</div>
{% endblock %}
