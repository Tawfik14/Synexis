{% extends 'base.html.twig' %}
{% block title %}Espace Utilisateur Complexe{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
<link rel="stylesheet" href="{{ asset('css/dashboard_features.css') }}">
{% endblock %}

{% block body %}
<section class="hero">
  <img src="{{ asset('img/logovertsansfond.png') }}" alt="Synexis Logo" class="logo">
  <h1>Bienvenue, {{ app.user.firstname }}</h1>
  <p>Bienvenue dans votre interface avancée.</p>
  <div class="hero-buttons">
    <a href="{{ path('app_profil') }}" class="btn">Mon Profil</a>
    <a href="/logout" class="btn-outline">Se Déconnecter</a>
  </div>
</section>

<section class="features">
   <a style="text-decoration: none;"
  href="{{ path('app_info') }}" class="feature">
    <h2>Informations</h2>
    <p>Actualités, alertes et annonces accessibles à tous.</p>
  </a>

   <a style="text-decoration: none;" href="{{ path('app_connected_navigation') }}" class="feature">
    <h2>Objets connectés et Services</h2>
    <p>Voyez tous les objets connectés et les services proposés par la platforme</p>
  </a>
  <a style="text-decoration: none;"
   href="{{ path('app_objets_home') }}" class="feature">
   <h2>Gestion</h2>
   <p>Gérez vos objets et les services ici</p>
</a>


  <a style="text-decoration: none;" href="{{ path('admin_dashboard') }}" class="feature locked">
    <h2>Paramètres</h2>
    <p>Réglez les préférences de votre environnement.</p>
  </a>
</section>

<footer class="footer">
  &copy; 2025 Synexis - Tous droits réservés. |
  <a href="{{ path('app_contact') }}">Contact</a> |
  <a href="{{ path('app_about') }}">À propos</a>
</footer>
{% endblock %}

