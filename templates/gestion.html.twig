{% extends 'base.html.twig' %}
{% block title %}Gestion des Objets{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/features_dashboard.css') }}">
{% endblock %}

{% block body %}
<section class="dashboard-section">
    <h1>Gestion des Objets Connectés</h1>
    <p>Ajouter, modifier ou désactiver les objets de votre complexe connecté.</p>

    <table class="management-table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>État</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Badgeuse principale</td>
                <td>Contrôle d'accès</td>
                <td>Active</td>
                <td><button>Modifier</button> <button>Désactiver</button></td>
            </tr>
            <tr>
                <td>Détecteur CO2</td>
                <td>Sécurité</td>
                <td>Inactive</td>
                <td><button>Activer</button></td>
            </tr>
        </tbody>
    </table>
</section>
{% endblock %}

